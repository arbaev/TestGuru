<div class="row m-3">
  <div class="col- col-sm-12 col-md-6">
    <%= form_with model: @feedback, local: true do |form| %>
      <%= render 'shared/errors', resource: @feedback %>

      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name,
                            autofocus: true,
                            class: 'form-control',
                            placeholder: true %>
      </div>

      <div class="form-group">
        <%= form.label :email %><br/>
        <%= form.email_field :email,
                             autocomplete: "email",
                             class: 'form-control',
                             placeholder: true %>
      </div>

      <div class="form-group">
        <%= form.label :message %><br>
        <%= form.text_area :message, cols: 40, rows: 8,
                           class: 'form-control',
                           placeholder: true %>
      </div>

      <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
