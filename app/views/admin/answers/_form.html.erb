<div class="row m-3">
  <div class="col- col-sm-12 col-md-6">
    <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
      <%= render 'shared/errors', resource: @answer %>

      <div class="form-group">
        <%= form.label :body %><br>
        <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
      </div>

      <div class="form-check mb-3">
        <%= form.label :correct, class: "form-check-label" do %>
          <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
          <%= t('helpers.label.answer.correct') %>
        <% end %>
      </div>

      <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
