<h1><%= @question.body %></h1>

<p>
  <%= link_to t('.back'), admin_test_path(@question.test) %> |
  <%= link_to t('.edit'), edit_admin_question_path(@question) %> |
  <%= link_to t('.delete'), admin_question_path(@question),
              method: :delete,
              data: {confirm: t('.sure')} %>
</p>

<h2><%= t('.answers') %></h2>

<% if @question.answers.present? %>
  <table class="table">
    <thead class="thead-light">
    <tr>
      <th><%= t('.question') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
    </thead>
    <tbody>
      <%= render @question.answers %>
    </tbody>
  </table>
  <% else %>
  <p><%= t('.no_answers') %></p>
<% end %>
<p>
  <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
</p>
