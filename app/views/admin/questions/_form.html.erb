<div class="row m-3">
  <div class="col- col-sm-12 col-md-6">
    <%= form_with model: [:admin, @test, @question], local: true do |form| %>
      <%= render 'shared/errors', resource: @question %>

      <div class="form-group">
        <%= form.label :body %><br>
        <%= form.text_field :body, id: :question_body, class: 'form-control' %>
      </div>

        <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
