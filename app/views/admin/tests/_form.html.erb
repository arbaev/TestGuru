<div class="row m-3">
  <div class="col- col-sm-12 col-md-6">
    <%= form_with model: [:admin, @test], local: true do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div class="form-group">
        <%= form.label :title %><br>
        <%= form.text_field :title, id: :test_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :level %><br>
        <%= form.number_field :level, in: 0..5, step: 1, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :category_id %><br>
        <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, {class: 'form-control'} %>
      </div>

      <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
