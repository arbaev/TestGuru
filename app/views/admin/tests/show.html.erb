<h1><%= t('.header_html', title: @test.title) %></h1>

<p><%= t('.level') %>: <strong><%= test_level(@test) %> (<%= @test.level %>)</strong></p>
<p><%= t('.duration', duration: @test.duration / 60) %>: <strong><%= @test.duration / 60 %></strong></p>

<table class="table">
  <thead class="thead-light">
  <tr>
    <th><%= t('.question') %></th>
    <th><%= t('.answers') %></th>
    <th colspan="4"><%= t('.actions') %></th>
  </tr>
  </thead>
  <tbody>
    <%= render @questions %>
  </tbody>
</table>
<hr>
<%= link_to_tests %> | <%= link_new_question %>
