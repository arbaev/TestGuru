<tr>
  <td><%= link_to test.title, admin_test_path(test) %></td>
  <td><%= test.questions.count %></td>
  <td><%= test_level(test) %></td>
  <td><%= test.category.title %></td>
  <% if user_signed_in? %>
    <td><%= link_to 'Edit', edit_admin_test_path(test) %></td>
    <td><%= link_to 'Delete', admin_test_path(test),
                    method: :delete,
                    data: {confirm: 'Are you sure?'} %>
    </td>
  <% end %>
</tr>
