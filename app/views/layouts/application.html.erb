<!DOCTYPE html>
<html>
  <head>
    <title><%= t('.title') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="content">
      <%= render 'layouts/header' %>
      <div class="container">
        <%= render 'shared/flash' %>
        <%= yield %>
      </div>
    </div>
    <div class="container">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
