<header class="header">
  <div class="container">
    <div class="topbar">
      <%= link_to 'TestGuru', root_path, class: 'logo__title' %>
      <div class="account">
        <% if logged_in? %>
          Welcome, guru <strong><%= link_to current_user.name, user_path(current_user) %></strong>! |
          <%= link_to 'Logout', logout_path, method: :delete %>
        <% else %>
          <%= link_to 'Login', login_path %> |
          <%= link_to 'Signup', signup_path %>
        <% end %>
      </div>
    </div>
  </div>
</header>
